        style.
            body {
                font-family: 'Roboto', sans-serif;
            }
            .spinning:before {
            display: block;
            padding-top: 10px;
            text-align: center;
            content: 'Vinaro Sam';
            position: absolute; 
            width: 60px;
            height: 60px;
            margin-left: -30px;
            margin-top: -30px;
            top: 50%;
            left: 50%;
            box-sizing: border-box;
            border: 2px solid transparent;
            border-top: 1px solid black;
            border-bottom: 1px solid black;
            border-radius: 50%;
            animation: spin  3s ease-in infinite;
            background-color: white;
            z-index: 100;
            }
        
            .spinning:after {
            
            content: '';
            position: absolute; 
            width: 100px;
            height: 100px;
            margin-left: -30px;
            margin-top: -30px;
            top: 51%;
            left: 51%;
            box-sizing: border-box;
            border: 2px solid transparent;
            border-top: 1px solid black;
            border-bottom: 1px solid black;
            border-radius: 50%;
            animation: spinr  2s ease-in infinite;
            }
            @keyframes spin{
                50%{
                    transform: rotate(360deg);
                    border-top: 1px solid red;
                border-bottom: 1px solid blue;
            
                }
            }
            
            @keyframes spinr{
                50%{
                    transform: rotate(-360deg);
                border-top: 1px solid red;
                border-bottom: 1px solid blue;
            
                }
            }
    body
        span(class='spinning')
